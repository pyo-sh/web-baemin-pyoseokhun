extends layout

block head 
  link(rel="stylesheet", href="/stylesheets/terms.css")

block body
  .terms_wrapper
    section.terms_hello
      h2 
        ="어서오세요"
      h2 
        ="약관동의가 필요해요"
    ul.terms_list
      +termitem("term_all", "전체동의")
      .terms_list__divider(style="margin-bottom: 25px;")
      +termitem("term_1", "배달의민족 이용약관 동의")
      +termitem("term_2", "전자금융거래 이용약관 동의")
      +termitem("term_3", "개인정보 수집이용 동의")
      +termitem("term_4", "개인정보 제3자 제공 동의")
      +termitem("term_5", "마케팅 정보 메일, SMS 수신동의(선택)", false)
      .terms_list__divider

mixin termitem(id="", label="", hasArrow=true)
  li.terms_list__item
    input(id=id, type="checkbox").terms_list__input
    label(for=id).terms_list__box
      span
    label.terms_list__title
      =label
    -if(hasArrow)
      img(src="/images/right-arrow.png")